# ACR Automotive Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# Supabase Configuration
# =============================================================================

# Supabase Project URL
# Get this from your Supabase project dashboard
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url

# Supabase Anonymous Key  
# Get this from your Supabase project dashboard (API settings)
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# =============================================================================
# Application Configuration
# =============================================================================

# Environment - affects logging, error handling, security settings
NODE_ENV=development

# Application Name - used in UI and branding
APP_NAME="ACR Automotive"

# Application URL - used for generating links
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# =============================================================================
# Admin Configuration (MVP - Mock Authentication)
# =============================================================================

# Enable admin mode for development (no real auth yet)
ADMIN_MODE=true

# =============================================================================
# Future Authentication (Post-MVP)
# =============================================================================

# NextAuth Secret - Used to encrypt JWT tokens and session cookies
# Generate with: openssl rand -base64 32
# NEXTAUTH_SECRET=your-super-secret-key-here

# NextAuth URL - The canonical URL of your site
# NEXTAUTH_URL=http://localhost:3000

# =============================================================================
# Excel Processing Configuration
# =============================================================================

# Maximum file size for Excel uploads (in MB)
MAX_EXCEL_FILE_SIZE=10

# Batch size for Excel processing (rows per batch)
EXCEL_BATCH_SIZE=100

# =============================================================================
# Search Configuration
# =============================================================================

# Maximum search results per page
MAX_SEARCH_RESULTS=50

# Minimum similarity score for fuzzy matching (0.0 to 1.0)
FUZZY_SEARCH_THRESHOLD=0.6

# =============================================================================
# Image Storage Configuration
# =============================================================================

# Supabase storage bucket for part images
STORAGE_BUCKET=part-images

# Maximum image file size (in MB)
MAX_IMAGE_SIZE=5

# Allowed image formats (comma-separated)
ALLOWED_IMAGE_FORMATS=jpg,jpeg,png,webp

# =============================================================================
# Development Tools
# =============================================================================

# Enable debug logging
DEBUG=false

# Next.js Development Port
PORT=3000

# =============================================================================
# SECURITY NOTES
# =============================================================================

# 1. NEVER commit this file with real values to version control
# 2. Use different secrets for each environment (dev, staging, prod)
# 3. Store production secrets in your hosting platform's secret manager
# 4. Regularly rotate secrets when authentication is added
# 5. Enable Row Level Security (RLS) policies in Supabase

# =============================================================================
# SETUP INSTRUCTIONS
# =============================================================================

# 1. Copy this file to .env:
#    cp .env.example .env

# 2. Create a new Supabase project:
#    - Go to https://supabase.com
#    - Create new project
#    - Copy the project URL and anon key

# 3. Update .env with your Supabase credentials

# 4. Run the database schema:
#    - Go to Supabase SQL Editor
#    - Run the contents of supabase/schema.sql

# 5. Install dependencies:
#    npm install

# 6. Start the development server:
#    npm run dev